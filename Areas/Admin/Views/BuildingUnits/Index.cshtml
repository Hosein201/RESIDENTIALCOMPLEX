@model IEnumerable<IRRCMS.BuildingUnit>

@{
    ViewBag.Title = "فهرست واحدها";
}

@if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
{
    <div class="alert alert-@TempData["MessageClass"]">

        @TempData["Message"]
    </div>

}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-sm bottom-space">
        <span class="fa fa-plus"></span>
        افزودن
    </a>
</p>
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyCharge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MonthlyCharge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResidentId)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }) |
                    <a href="@Url.Action("حذف", new { id = item.Id })" class="btn btn-sm btn-danger">
                        <span class="fa fa-remove"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
