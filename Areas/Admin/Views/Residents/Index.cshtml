@model IEnumerable<IRRCMS.EntityModelsClasses.Resident>

@{
    ViewBag.Title = "فهرست";
}

<h2>@ViewBag.Title</h2>
<div class="col-md-12 ResidentIndexButton" id="ResidentIndexButton">
    <p>
        <a href="@Url.Action("Create")" class="btn btn-success btn-sm ">
            <span class="fa fa-plus"></span>
            افزودن ساکن جدید
        </a>
    </p>
</div>
<div class="table-responsive col-md-12 " >
    <table id="ResidentsIndexTable" class="table table-hover table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuildingUnit.UnitNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfOccupants)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingUnit.UnitNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfOccupants)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }) |
                    <a href="@Url.Action("حذف", new { id = item.Id })" class="btn btn-sm btn-danger">
                        <span class="fa fa-remove"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
